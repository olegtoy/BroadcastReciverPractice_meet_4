<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.practice.olegtojgildin.broadcastreciverpractice_meet_4.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/update_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_update_state"
    />

    <TextView
        android:id="@+id/state_caption_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_current_state"
        />

    <TextView
        android:id="@+id/state_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_state_unknown"
      />




</LinearLayout>
